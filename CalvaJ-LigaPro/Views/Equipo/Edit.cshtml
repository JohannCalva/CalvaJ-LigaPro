@model CalvaJ_LigaPro.Models.Equipo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Equipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <div>
                        <img class="logo-equipo" src="@Url.Content(Model.Logo)" alt="Logo del equipo" />
                    </div>
                }
                else
                {
                    <p>No se ha asignado un logo.</p>
                }
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Descripcion))
                {
                <div>
                    <p class="form-control-plaintext">@Model.Descripcion</p>
                </div>
                }
                else
                {
                <p>No tiene descripcion.</p>
                }
                
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosJugados" class="control-label"></label>
                <input asp-for="PartidosJugados" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="PartidosGanados" class="control-label"></label>
                <input asp-for="PartidosGanados" class="form-control" />
                <span asp-validation-for="PartidosGanados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosEmpatados" class="control-label"></label>
                <input asp-for="PartidosEmpatados" class="form-control" />
                <span asp-validation-for="PartidosEmpatados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosPerdidos" class="control-label"></label>
                <input asp-for="PartidosPerdidos" class="form-control" />
                <span asp-validation-for="PartidosPerdidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puntos" class="control-label"></label>
                <input asp-for="Puntos" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary my-1" asp-action="ListaEquipos">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
